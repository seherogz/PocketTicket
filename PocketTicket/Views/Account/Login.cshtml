@using PocketTicket.ViewModels;
@model LoginVM
@{
    ViewData["Title"] = "Log-in";
}

<div class="row justify-content-center" style="margin-top: 50px;">
    <div class="col-md-6 text-center">
        <img src="/images/logo.png" alt="PocketTicket Logo" style="width: 150px; margin-bottom: 20px;">
        <h2>PocketTicket</h2>
        <p style="font-size: 1.2rem; color: #555;">Airline Service</p>
    </div>
</div>


<div class="row justify-content-center mt-4">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-6 alert alert-danger text-center">
            <span><b>Sorry.</b> - @TempData["Error"]</span>
        </div>
    }

    <div class="col-md-6">
        <div class="card shadow-sm" style="border-radius: 10px; padding: 20px;">
            <div class="card-body">
                <h4 class="text-center mb-4">Please fill in your login information</h4>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="EmailAdress" class="form-label">E-mail</label>
                        <input asp-for="EmailAdress" class="form-control" style="border-radius: 5px;" />
                        <span asp-validation-for="EmailAdress" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" style="border-radius: 5px;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between mt-3">
                        <input type="submit" class="btn btn-outline-success px-4" value="Log in" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
                <p class="mt-3 text-center">
                    If you don't have an account,
                    <a asp-action="Register" class="text-primary" style="text-decoration: underline;">sign up here</a>.
                </p>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "PocketTicket - Home";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="row justify-content-between align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <img src="/images/PocketTicket.webp" alt="PocketTicket Logo" style="width: 200px;">
        </div>
        <div class="col-md-2 text-end"> 
            <a href="/Login" class="btn btn-outline-primary" style="border-radius: 50%; padding: 10px 12px;">
                <i class="bi bi-person"></i>
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow" style="background-color: #f4f4f4; border-radius: 15px; padding: 20px;">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h3 style="color: #555;">Bilet Ara</h3>
                    </div>

                    <form>
                        <div class="mb-3 d-flex justify-content-center gap-3">
                            <div>
                                <input type="radio" id="tekYon" name="tripType" value="one-way">
                                <label for="tekYon">Tek Yön</label>
                            </div>
                            <div>
                                <input type="radio" id="gidisDonus" name="tripType" value="round-trip">
                                <label for="gidisDonus">Gidiş-Dönüş</label>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="nereden" class="form-label">Nereden</label>
                                <input type="text" id="nereden" class="form-control" placeholder="Nereden" required>
                            </div>
                            <div class="col-md-6">
                                <label for="nereye" class="form-label">Nereye</label>
                                <input type="text" id="nereye" class="form-control" placeholder="Nereye" required>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="takvim" class="form-label">Gidiş Tarihi</label>
                                <input type="date" id="takvim" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label for="donusTarihi" class="form-label">Dönüş Tarihi</label>
                                <input type="date" id="donusTarihi" class="form-control" disabled>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="yolcuSayisi" class="form-label">Yolcu Sayısı</label>
                            <select id="yolcuSayisi" class="form-select">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2" style="border-radius: 10px;">Bilet Bul</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Enable/Disable Dönüş Tarihi input based on trip type
    document.querySelectorAll('input[name="tripType"]').forEach((radio) => {
        radio.addEventListener('change', function () {
            const donusTarihi = document.getElementById('donusTarihi');
            if (this.value === 'round-trip') {
                donusTarihi.disabled = false;
            } else {
                donusTarihi.disabled = true;
            }
        });
    });
</script>

@model IEnumerable<Airport>

@{
    ViewData["Title"] = "PocketTicket - Home";
}

<div class="container mt-5">

    <!-- Search Section -->
    <div class="row justify-content-center mt-2">
        <div class="col-md-10">
            <div class="card shadow" style="background-color: #f4f4f4; border-radius: 15px; padding: 20px;">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h3 style="color: #555;">Bilet Ara</h3>
                    </div>

                    <!-- Form -->
                    <form asp-controller="Flight" asp-action="Index" method="get">
                        <div class="mb-3 d-flex justify-content-center gap-3">
                            <div>
                                <input type="radio" id="tekYon" name="tripType" value="one-way" checked>
                                <label for="tekYon">Tek Yön</label>
                            </div>
                            <div>
                                <input type="radio" id="gidisDonus" name="tripType" value="round-trip">
                                <label for="gidisDonus">Gidiş-Dönüş</label>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="nereden" class="form-label">Nereden</label>
                                <select id="nereden" name="departureAirportId" class="form-select" required>
                                    <option value="">Seçiniz</option>
                                    @foreach (var airport in Model)
                                    {
                                        <option value="@airport.Id">@airport.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="nereye" class="form-label">Nereye</label>
                                <select id="nereye" name="arrivalAirportId" class="form-select" required>
                                    <option value="">Seçiniz</option>
                                    @foreach (var airport in Model)
                                    {
                                        <option value="@airport.Id">@airport.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="takvim" class="form-label">Gidiş Tarihi</label>
                                <input type="date" id="takvim" name="departureDate" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label for="donusTarihi" class="form-label">Dönüş Tarihi</label>
                                <input type="date" id="donusTarihi" name="returnDate" class="form-control" disabled>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="yolcuSayisi" class="form-label">Yolcu Sayısı</label>
                            <select id="yolcuSayisi" name="passengerCount" class="form-select">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2" style="border-radius: 10px;">Bilet Bul</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('input[name="tripType"]').forEach((radio) => {
        radio.addEventListener('change', function () {
            const donusTarihi = document.getElementById('donusTarihi');
            if (this.value === 'round-trip') {
                donusTarihi.disabled = false;
            } else {
                donusTarihi.disabled = true;
            }
        });
    });
</script>
